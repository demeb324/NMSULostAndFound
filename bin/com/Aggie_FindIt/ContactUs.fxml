<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #941853, #6A1237);"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.Aggie_FindIt.ContactUsPageController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Contact Us" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
    
    <TextField fx:id="nameField" promptText="Your Name" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="Your Email" maxWidth="300"/>
    <TextField fx:id="phoneField" promptText="Your Phone Number" maxWidth="300"/>
    <TextArea fx:id="messageArea" promptText="Your Message" maxWidth="300" prefRowCount="5"/>
    
    <Button text="Send Message" onAction="#submitForm" style="-fx-background-color: #007BFF; -fx-text-fill: white;"/>
    
    <Label fx:id="statusLabel" style="-fx-text-fill: white;"/>
    
    <VBox alignment="CENTER" spacing="10">
        <Label text="Or reach us directly:" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <Label text="Phone: (575) 123-4568" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
        <Label text="Email: support@aggiefindit.com" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
    </VBox>
    
    <Button text="Back to Home" onAction="#backToHome" style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
</VBox>