<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #941853, #6A1237);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.Aggie_FindIt.MainPageController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" text="Where to go!" />
    </VBox>

    <VBox alignment="CENTER" spacing="15">
      <ImageView fitHeight="639.0" fitWidth="610.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../resources/images/nmsuMap.jpg_large" />
         </image>
      </ImageView>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="buildingColumn" prefWidth="75.0" text="Building" />
                <TableColumn fx:id="roomNumberColumn" prefWidth="75.0" text="Room Number" />
            </columns>
        </TableView>

    </VBox>

    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#goBack" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 120px;" text="Go back" />
    </HBox>
</VBox>
